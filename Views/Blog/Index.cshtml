@using WebProject.Blogging.Models
@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pr-4">
        <div class="col-6">
            <h2 class="text-primary">статьи</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">Создать</a>
        </div>
    </div>



<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Create Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th width:10%>
                    @item.Id
                </th>
            </tr>
            <tr>
                <th width:20%>
                    @item.CreateDate
                </th>
            </tr>
            <tr>
                <th width:70%>
                    @item.BlogTitle
                </th>
            </tr>
        }
    </tbody>
</table>
</div>